@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<style>
    .login-page > .content, .lock-page > .content {
        padding-top: 10vh !important;
    }
</style>
<div class="row">
    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
        <form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="card" data-background="color" data-color="blue">
                <div class="card-header">
                    <h3 class="card-title">Register</h3>
                </div>
                <div class="card-content">
                    <div class="form-group">
                        <label>First Name</label>
                        <input asp-for="Input.FirstName" placeholder="Enter first name" class="form-control input-no-border" />
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input asp-for="Input.LastName" placeholder="Enter last name" class="form-control input-no-border" />
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Birth Year</label>
                        <select name="BirthYear" class="form-control">
                            <option value="">Select Year!</option>
                            @foreach (var item in Enumerable.Range(1940, 75))
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Username (e-mail)</label>
                        <input asp-for="Input.Email" placeholder="Enter email" class="form-control input-no-border" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Input.Password" placeholder="Password" class="form-control input-no-border">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Re-enter password</label>
                        <input asp-for="Input.ConfirmPassword" placeholder="Password" class="form-control input-no-border">
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-fill btn-wd ">Register</button>
                    <div class="forgot">
                        <a href="/Identity/Account/Login">Already have an account?</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

 

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
