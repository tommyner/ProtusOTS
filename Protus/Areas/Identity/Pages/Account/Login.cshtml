@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4 col-sm-6 col-md-offset-4 col-sm-offset-3">
        <form id="account" method="post">
            <div class="card" data-background="color" data-color="blue">
                <div class="card-header">
                    <h3 class="card-title">Login</h3>
                </div>
                <div class="card-content">
                    <div class="form-group">
                        <label>Email address</label>
                        <input asp-for="Input.Email" placeholder="Enter email" class="form-control input-no-border" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input asp-for="Input.Password" placeholder="Password" class="form-control input-no-border">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-fill btn-wd ">Login</button>
                    <div class="forgot">
                        <a href="/Identity/Account/Register">Create new account?</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
  

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
